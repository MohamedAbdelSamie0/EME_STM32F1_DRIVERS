#ifndef NVIC_INTERFACE_H_
#define NVIC_INTERFACE_H_

/*******************   Groups & SUB Definition     ***********************/
/*	splits the NVIC_PRI_n fields in the Interrupt Priority Registers into separate group priority and subgroups priority fields	*/
#define  						    	0x05FA0300	/*	0 subgroups & 4 groups   << 0  */
#define GROUP4 						    0x05FA0400	/*	1 subgroups & 3 groups   << 1  */
#define GROUP5 						    0x05FA0500	/*	2 subgroups & 2 groups   << 2  */
#define GROUP6 						    0x05FA0600	/*	3 subgroups & 1 groups   << 3  */
#define GROUP7 						    0x05FA0700	/*	4 subgroups & 0 groups   << 4  */


#endif /* NVIC_INTERFACE_H_ */
